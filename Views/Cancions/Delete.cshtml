@model Spotify.Models.db.Cancion

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" type="text/css" href="/css/admin/delete.css">
</head>

<header>
    <div class="header-content">
        <div class="logo">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/71/Spotify.png/768px-Spotify.png" alt="Spotify Logo" class="spotify-logo"> <h1>Spotify |</h1><h4> Borrar Canción</h4>
          
         
        </div>
    </div>
</header>
<div>
    <a asp-action="Index">A T R A S</a>
</div>


<main>
    <hr />
    <dl class="info-list">
        <div class="info-item">
            <dt>@Html.DisplayNameFor(model => model.Titulo)</dt>
            <dd>@Html.DisplayFor(model => model.Titulo)</dd>
        </div>

        <div class="info-item">
            <dt>@Html.DisplayNameFor(model => model.Interprete)</dt>
            <dd>@Html.DisplayFor(model => model.Interprete)</dd>
        </div>

        <div class="info-item">
            <dt>@Html.DisplayNameFor(model => model.Album)</dt>
            <dd>@Html.DisplayFor(model => model.Album)</dd>
        </div>

        <div class="info-item">
            <dt>@Html.DisplayNameFor(model => model.Genero)</dt>
            <dd>@Html.DisplayFor(model => model.Genero)</dd>
        </div>

        <div class="info-item">
            <dt>@Html.DisplayNameFor(model => model.Anio)</dt>
            <dd>@Html.DisplayFor(model => model.Anio)</dd>
        </div>

        <div class="info-item">
            <dt>@Html.DisplayNameFor(model => model.Portada)</dt>
            <dd>@Html.DisplayFor(model => model.Portada)</dd>
        </div>
    </dl>


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
       
    </form>
</main>


<footer>
    <h3>Spotify</h3>
    <p>&copy; 2023 Spotify | Universidad Catolica Boliviana | Todos los derechos reservados</p>
</footer>


